<style>
    @import url(https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800);

    /* * {
        box-sizing: border-box;
    } */

    /* [class*="large"] {
        display: block;
        float: left;
        padding: 0;
    } */

    /* .row1 .row1>[class*="large"]:first-child {
        padding-left: 0;
    } */

    [class*="large"] img {
        width: 100%;
        height: auto;
    }

    .large {
        width: 50%;
    }

    body {
        background-color: #f7e3f9;
    }

    .row1:before,
    .row1:after {
        content: "";
        display: table;
    }

    .row1:after {
        clear: both;
    }

    .row1 {
        width: 100%;
        max-width: 1000px;
        margin: 0 auto;
    }

    h1 {
        font-size: 24px;
        font-family: 'Open Sans', sans-serif;
        /* font-weight: 300; */
        color: #707584;
    }

    h2 {
        color: #666666;
        font-size: 20px;
        font-weight: 400;
    }

    .column1 {
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;
        padding: 60px;
        background-color: #f2f2f2;
    }

    .column1 span {
        padding: 7px 6px 1px 1px;
        float: right;
    }

    .column1,
    .column2 {
        min-height: 70vh;
    }

    .add span {
        color: #66cc33 !important;
    }

    .credit:hover {
        box-shadow: 1px 1px 0px rgba(0, 0, 0, 0.1);
        border: 4px solid #8393ca;
    }

    .credit {
        border-radius: 5px;
        border: 2px solid #e1e1e1;
        font-family: 'Open Sans', sans-serif;
        font-weight: 300;
    }

    .credit {
        margin: 30px auto;
        background-color: #fff;
    }

    .credit img {
        max-width: 30%;
    }

    .content-container {
        padding: 20px;
    }

    .content-container p {
        font-size: 16px;
        color: #b2b2b2;
    }

    .column2 {
        padding: 60px 30px 70px 60px;
        box-shadow: -6px 6px 20px rgba(0, 0, 0, 0.3);
    }

    .column2 {
        border-radius: 5px;
        background-color: #fff;
    }

    .column2-title2 span {
        font-size: 30px;
    }

    .column2-title2 {
        float: right;
        margin-top: -70px;
    }

    .column2-title2 sup {
        font-size: 14px;
    }

    .column2-title {
        padding-left: 50px;
    }

    /* hr {
        margin-left: 50px;
        opacity: .2;
        margin-top: 70px;
        margin-bottom: 60px;
        width: 90%;
    } */

    .column2 span {
        font-weight: 600;
        color: #444751;
        float: right;
    }

    .transaction-info h3 {
        font-size: 18px;
        color: #333333;
        font-weight: 600;
    }

    .transaction-info {
        padding-left: 2%;
        display: inline-block;
    }

    .transaction-info p {
        font-size: 14px;
        color: #999999;
        /* margin: -14px 0 5px 0; */
    }

    .transaction span {
        font-size: 18px;
        color: #8393ca;
    }

    .transaction sup {
        font-size: 10px;
    }

    .transaction {
        font-family: 'Open Sans', sans-serif;
    }

    .transaction span {
        float: right;
        padding-top: 15px;
    }

    .transaction-image {
        padding-left: 12px;
        display: inline-block;
    }

    .transaction-image img {
        padding-bottom: 7px;
        margin-left: 40px;
    }

    .transaction {
        padding: 20px;
    }
</style>




<%- include('../partials/header.ejs') %>

<section class="section register min-h-screen d-flex flex-column align-items-center justify-content-center py-4  "
    id="product">
    <div class="container ">
        <div class="row1 justify-content-center ">
            <div class="col-lg-12 col-md-6 d-flex flex-column align-items-center justify-content-center">

                <div class="card w-100">

                    <div class="flex flex-row1">
                        <div class="large">
                            <div class="column1">
                                <h1>My Wallet </h1>
                                <div class="credit visa">
                                    <div class="content-container">
                                        <img src='user-assets/images/profile.png' class="w-10 p-1">
                                        <h2 class="pt-2"><%= user.name %></h2>
                                        <p> <%= user.email %> </p>
                                    </div>
                                </div>


                            </div>
                        </div>
                        <div class="column2 w-[58%]">
                            <div class="mb-4">
                                <div class="flex flex-row1 justify-between">
                                    <h1>Current Balance</h1>

                                    <h1><span>â‚¹<%= wallet.length>0? wallet[wallet.length-1].balance :0 %></span></h1>
                                </div>
                                <hr class="mt-6 mb-2 mr-3">
                            </div>

                            <h1 class="text-lg mb-2">Wallet History</h1>

                            <table class="table table-striped table-hover">
                                <thead class="bg-dark-light">


                                    <tr>
                                        <th scope="col">Date</th>
                                        <th scope="col">Amount</th>
                                        <!-- <th scope="col">Notes/Message</th> -->
                                        <th scope="col">Type</th>


                                    </tr>
                                </thead>
                                <tbody>



                                    <% if (wallet.length>0) { %>
                                    <% wallet.forEach(element => { %>
                                    <tr
                                        class="align-middle     - element.type === 'Credit' ? 'bg-success-light' : 'bg-danger-light' %>">
                                        <td> <%= element.time.toISOString().split("T")[0] %></td>
                                        <td> <%= element.amount %></td>

                                        <!-- <td> - element.message %></td> -->
                                        <td> <%= element.status %></td>

                                    </tr>
                                    <% }) %>
                                    <% } else  { %>
                                    <tr>
                                        <td colspan="4" class="text-center">No transactions yet</td>
                                    </tr>
                                    <% } %>




                                </tbody>

                            </table>

                        </div>
                    </div>

                </div>

                </form>
            </div>
        </div>



    </div>


</section>






