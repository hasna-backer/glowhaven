<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css"
    integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />

<div class="container mb-5">
    <div class="row pt-3">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body pt-3">
                    <div class="invoice-title">
                        <h4 class="float-end font-size-15">Invoice <span class="badge bg-success font-size-12
                                ms-2"><%= cartItems[0].payment_method.toUpperCase() %></span></h4>
                        <div class="mb-4">
                            <h2 class="mb-1 text-muted">Glohaven.com</h2>
                        </div>
                        <div class="text-muted">
                            <p class="mb-1">3184 Spruce Drive Pittsburgh, PA 15201</p>
                            <p class="mb-1"><i class="uil uil-envelope-alt me-1"></i> xyz@987.com</p>
                            <p><i class="uil uil-phone me-1"></i> 012-345-6789</p>
                        </div>
                    </div>

                    c
                    <hr lass="my-4">
                    <% cartItems.forEach(order=> { %>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="text-muted">
                                <h5 class="font-size-16 mb-3">Billed To:</h5>
                                <h5 class="font-size-15 mb-2"><%= customer %></h5>
                                <!-- <h5 class="font-size-15 mb-2"><%= cartItems[0].address %></h5> -->
                                <p class="mb-1"><%= cartItems[0].address %></p>

                            </div>
                        </div>
                        <!-- end col -->
                        <div class="col-sm-8">
                            <div class="text-muted text-sm-end">
                                <div>
                                    <h5 class="font-size-15 mb-1">Invoice No:</h5>

                                    <p><%= order._id.toString().slice(-6) %></p>
                                </div>
                                <div class="mt-4">
                                    <h5 class="font-size-15 mb-1">Invoice Date:</h5>
                                    <p><%= order.createdAt.toDateString() %></p>
                                </div>
                                <!-- <div class="mt-4">
                                    <h5 class="font-size-15 mb-1">Order No:</h5>
                                    <p>#1123456</p>
                                </div> -->
                            </div>
                        </div>
                        <!-- end col -->
                    </div>
                    <!-- end row -->

                    <div class="py-2">
                        <h5 class="font-size-15">Order Summary</h5>

                        <div class="table-responsive">
                            <table class="table align-middle table-nowrap table-centered mb-0">
                                <thead>
                                    <tr>
                                        <th style="width: 70px;">No.</th>
                                        <th>Item</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th class="text-end" style="width: 120px;">Total</th>
                                    </tr>
                                </thead><!-- end thead -->
                                <tbody>
                                    <% order.items.forEach(item => { %>

                                    <tr>
                                        <th scope="row">01</th>
                                        <td>
                                            <div>
                                                <h5 class="text-truncate font-size-14 mb-1"><%= item.product_id.product_name.split(' ').slice(0,
                                                            6).join(' ')  %></h5>
                                                <!-- <p class="text-muted mb-0">Watch, Black</p> -->
                                            </div>
                                        </td>
                                        <td> ₹ <%= item.price / item.quantity%></td>
                                        <td><%= item.quantity %></td>
                                        <td class="text-end">₹ <%= item.price %></td>
                                    </tr>
                                    <% }) %>
                                    <!-- end tr -->
                                    <tr>
                                        <th scope="row" colspan="4" class="text-end">Sub Total</th>
                                        <td class="text-end"> ₹
                                            <%= cartItems[0].total_amount + cartItems[0].coupon.discount %></td>
                                    </tr>
                                    <!-- end tr -->
                                    <tr>
                                        <th scope="row" colspan="4" class="border-0 text-end">
                                            Discount :</th>
                                        <td class="border-0 text-end">- ₹<%= cartItems[0].coupon.discount %></td>
                                    </tr>
                                    <!-- end tr -->
                                    <tr>
                                        <th scope="row" colspan="4" class="border-0 text-end">
                                            Shipping Charge :</th>
                                        <td class="border-0 text-end"><%= shipping %></td>
                                    </tr>
                                    <!-- end tr -->
                                    <!-- <tr>
                                        <th scope="row" colspan="4" class="border-0 text-end">
                                            Tax</th>
                                        <td class="border-0 text-end">₹12.00</td>
                                    </tr> -->
                                    <!-- end tr -->
                                    <tr>
                                        <th scope="row" colspan="4" class="border-0 text-end">Total</th>
                                        <td class="border-0 text-end">
                                            <h4 class="m-0 fw-semibold">₹ <%= cartItems[0].total_amount %></h4>
                                        </td>
                                    </tr>
                                    <!-- end tr -->
                                </tbody><!-- end tbody -->
                            </table><!-- end table -->
                        </div><!-- end table responsive -->
                        <div class="d-print-none mt-4">
                            <div class="float-end">
                                <a onclick="window.print()" class="btn btn-success me-1"><i class="fa fa-print"></i></a>
                                <!-- <a href="#" class="btn btn-primary w-md">Send</a> -->
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div><!-- end col -->
    </div>
</div>