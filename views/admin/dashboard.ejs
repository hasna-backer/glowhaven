              <div class="card-body">
                <h5 class="card-title">Reports <span>/Today</span></h5>

                <!-- Line Chart -->
                <div id="reportsChart"></div>

                <script>
                  const showChart = async (element) => {
                    try {
                      // element.preventDefault()
                      const filter = element ? element.getAttribute('data-filter') : "today"
                      const response = await axios.get('/admin/chart?filter=' + filter);
                      const data = response.data;
                      console.log("data", data);

                      // Extracting the units and the corresponding time windows
                      const units = data.map(item => item.units);
                      const categories = data.map(item => item.date);
                      document.querySelector("#reportsChart").innerHTML = ""
                      new ApexCharts(document.querySelector("#reportsChart"), {
                        series: [{
                          name: 'Orders',
                          data: units,
                        }],
                        chart: {
                          height: 350,
                          type: 'area',
                          toolbar: {
                            show: false
                          },
                        },
                        markers: {
                          size: 3
                        },
                        colors: ['#4154f1'],
                        fill: {
                          type: "gradient",
                          gradient: {
                            shadeIntensity: 1,
                            opacityFrom: 0.3,
                            opacityTo: 0.4,
                            stops: [0, 90, 100]
                          }
                        },
                        dataLabels: {
                          enabled: false
                        },
                        stroke: {
                          curve: 'smooth',
                          width: 2
                        },
                        xaxis: {
                          categories: categories
                        },
                        tooltip: {
                          x: {
                            format: 'HH:mm'
                          },
                        }
                      }).render();
                    } catch (error) {
                      console.error("Error fetching data:", error);
                    }
                  }
                  document.addEventListener("DOMContentLoaded", () => showChart());
                  // window.onload(() => {
                  //   showChart()
                  // })
                </script>

                <!-- End Line Chart -->

              </div>

