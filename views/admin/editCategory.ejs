<%- include('../partials/adminHeader.ejs') %>
    <%- include('../partials/adminSidebar.ejs') %>


        <main id="main" class="main">
            <div class="pagetitle">
                <h1>Categories</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                        <li class="breadcrumb-item"><a href="/admin/category">Categories</a></li>
                        <li class="breadcrumb-item active">Edit Category</li>

                    </ol>
                </nav>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="div h3 text-second fw-bold py-2">Edit Category</div>

                        <!-- Table with hoverable rows -->
                        <div style="width: 80%;" class="container py-3 w mb-5 new-category">
                            <!-- <div class="div h3 text-second fw-bold">New Category</div> -->
                            <form action="/admin/edit-category/<%= category._id %>" method="post">
                                <div class="form-group">
                                    <% if (error && error.length> 0) { %>
                                        <div id="alertMessage" class="alert alert-danger">
                                            <%= error %>
                                        </div>
                                        <% } %>
                                            <label class="fw-bold my-2" for="exampleFormControlInput1">Category
                                                Name</label>
                                            <input type="text" class="form-control" name="cat_name"
                                                value="<%= category.cat_name %>"
                                                placeholder="Enter the Name of the Category"
                                                id="exampleFormControlInput1" required>
                                </div>
                                <label class="fw-bold my-2" for="exampleFormControlInput1">Status</label>
                                <select class="form-select" name="cat_status" aria-label="Default select example"
                                    value="<%= category.status %>">

                                    <option value="true">List</option>
                                    <option value="false">Unlist</option>
                                </select>
                                <div class="form-group">
                                    <label class="fw-bold my-2" for="exampleFormControlTextarea1">Description</label>
                                    <textarea class="form-control" name="description"
                                        placeholder="Enter description About the Category"
                                        id="exampleFormControlTextarea1" rows="3"
                                        required><%= category.description %></textarea>
                                </div>
                                <div class="text-center text-lg-start mt-4 d-flex">
                                    <button type="submit" class="btn add-btn btn-lg"
                                        style="display:block; padding:0.5em 2rem">ADD</button>
                                    <!-- <button type="reset" class="btn button-cancel btn-lg px-5 mx-3">CLEAR</button> -->
                                </div>
                            </form>

                        </div>
                        <!-- End Table with hoverable rows -->

                    </div>
                </div>
            </div>
            </div>
            </section>

        </main><!-- End #main -