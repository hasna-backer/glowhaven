<%- include('../partials/adminHeader.ejs') %>
<%- include('../partials/adminSidebar.ejs') %>

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Coupon</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                <li class="breadcrumb-item active">Coupon</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">

                    <h5 class="card-title">Coupon</h5>
                    <a href="/admin/add-coupon" class="btn btn-primary "
                        style="background-color: #0d6efd !important ;"><i class="bi bi-plus-lg"></i> New
                        Coupon</a>
                </div>
                <% if (error && error.length> 0) { %>
                <div id="alertMessage" class="alert alert-danger">
                    <%= error %>
                </div>
                <% } %>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="th-sm">Coupon Code</th>
                            <th class="th-sm">Description</th>
                            <th class="th-sm">Discount</th>
                            <th class="th-sm">min Purchase Amount</th>
                            <th class="th-sm">maximum Discount</th>
                            <th class="th-sm">Start Date</th>
                            <th class="th-sm">End Date</th>
                            <th class="th-sm">Used Count</th>
                            <th class="th-sm">Delete/Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% coupon.forEach(element=> { %>
                        <tr>
                            <td scope="row">
                                <%= element.coupon_code %>
                            </td>
                            <td>
                                <%= element.description %>
                            </td>
                            <td>
                                <%= element.discount %>
                            </td>
                            <td>
                                <%= element.minPurchaseAmount %>
                            </td>
                            <td>
                                <%= element.maximumDiscount %>
                            </td>
                            <td>
                                <%= element.start_date.toLocaleDateString()  %>
                            </td>
                            <td>
                                <%= new Date(element.exp_date).toLocaleDateString() %>
                            </td>

                            <td>

                            </td>

                            <td>
                                <a href="/admin/delete-coupon/<%= element._id %>" class="ms-3"
                                    onclick="return confirm('Are you sure,You want to delete <%= element.coupon_code %>')"><i
                                        class="ri-delete-bin-6-line"></i></a>
                                &nbsp;&nbsp;&nbsp;
                                <a href="/admin/edit-coupon/<%= element._id %>"><i class="ri-edit-2-line"></i></a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                <!-- End Table with hoverable rows -->

            </div>
        </div>
    </div>
    </div>
    </section>

</main><!-- End #main -