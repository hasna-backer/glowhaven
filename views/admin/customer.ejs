<%- include('../partials/adminHeader.ejs') %>
  <%- include('../partials/adminSidebar.ejs') %>

    <main id="main" class="main">
      <div class="pagetitle">
        <h1>Customer</h1>
        <nav>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
            <li class="breadcrumb-item active">Customer</li>
          </ol>
        </nav>
      </div><!-- End Page Title -->
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">

              <h5 class="card-title">Customer</h5>

            </div>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">Customer </th>
                  <th scope="col">Email</th>
                  <th scope="col">Phone</th>
                  <th scope="col">Created on</th>
                  <th scope="col">Block</th>
                </tr>
              </thead>
              <tbody>
                <% customer.forEach(element=> { %>
                  <tr>
                    <td scope="row">
                      <%= element.name %>
                        </th>
                    <td>
                      <%= element.email %>
                    </td>
                    <td>
                      <%= element.phone %>
                    </td>
                    <td>
                      <%= new Date(element.createdAt).toLocaleDateString() %>
                    </td>
                    <td>
                      <a href="/admin/block-customer/<%= element._id %>" class="ms-3"
                        onclick="return confirm('Are you sure,You want to delete <%= element.name %>')"><i
                          class="ri-delete-bin-6-line"></i></a>
                      <!-- &nbsp;&nbsp;&nbsp;
                      <a href="/admin/edit-customer/<%= element._id %>"><i class="ri-edit-2-line"></i></a> -->
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
            <!-- End Table with hoverable rows -->

          </div>
        </div>
      </div>
      </div>
      </section>

    </main><!-- End #main -