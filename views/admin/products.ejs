<%- include('../partials/adminHeader.ejs') %>
    <%- include('../partials/adminSidebar.ejs') %>

        <main id="main" class="main">
            <div class="pagetitle">
                <h1>Product</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active">Product</li>
                    </ol>
                </nav>
            </div><!-- End Page Title -->
            <div class="col-lg-11">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">

                            <h5 class="card-title">Product</h5>
                            <a href="/admin/add-product" class="btn btn-primary "
                                style="background-color: #0d6efd !important ;"><i class="bi bi-plus-lg"></i> New
                                Product</a>
                        </div>



                        <!-- Table with hoverable rows -->
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Product</th>
                                    <th scope="col">ProductID</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Stock</th>
                                    <th scope="col">status</th>
                                    <th scope="col">Delete/Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% product.forEach(element=> { %>
                                    <tr>
                                        <th scope="row">
                                            <%= element.product_name %>
                                        </th>
                                        <td>
                                            <%= element._id.toString() %>
                                        </td>
                                        <td>
                                            <%= element.selling_price %>
                                        </td>
                                        <td>
                                            <%= element.stock %>
                                        </td>
                                        <td>
                                            <%= element.status ? "Active" :"Inactive" %>
                                        </td>
                                        <td>
                                            <a href="/admin/delete-product/<%= element._id %>" class="ms-3"
                                                onclick="return confirm('Are you sure,You want to delete <%= element.cat_name %>')"><i
                                                    class="ri-delete-bin-6-line"></i></a>
                                            &nbsp;&nbsp;&nbsp;
                                            <a href="/admin/edit-product/<%= element._id %>"><i
                                                    class="ri-edit-2-line"></i></a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                        <!-- End Table with hoverable rows -->

                    </div>
                </div>
            </div>
            </div>
            </section>

        </main><!-- End #main -